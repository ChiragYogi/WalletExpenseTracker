<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_one_on_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dimen_eight" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_two_on_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dimen_eight" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_one_on_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/dimen_eight" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_one_on_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/dimen_eight" />

    <include
        android:id="@+id/total"
       layout="@layout/total_card_view"
       android:layout_height="wrap_content"
       android:layout_width="0dp"
        android:layout_margin="@dimen/dimen_four"
        app:layout_constraintTop_toBottomOf="@id/guideline_one_on_top"
        app:layout_constraintStart_toEndOf="@id/guideline_one_on_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_two_on_right"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/total_rv_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/total"
        android:layout_marginTop="@dimen/dimen_eight"
        app:layout_constraintStart_toEndOf="@id/guideline_one_on_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_two_on_right"
        app:layout_constraintBottom_toTopOf="@id/guideline_one_on_bottom"/>



</androidx.constraintlayout.widget.ConstraintLayout>

