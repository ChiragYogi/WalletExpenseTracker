<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/adepter_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/bill_vector"
        android:layout_margin="@dimen/dimen_eight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/dropdowntagimage" />

    <TextView
        android:id="@+id/tagTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/income"
        android:textSize="@dimen/sixteen_sp_text_size"
        android:layout_margin="@dimen/dimen_eight"
        app:layout_constraintStart_toEndOf="@id/adepter_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>